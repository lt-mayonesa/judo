#!/usr/bin/env node
const yargs = require('yargs');
const chalk = require('chalk');

console.log(chalk.cyan(`    
         ▄█ ███    █▄  ████████▄   ▄██████▄  
        ███ ███    ███ ███   ▀███ ███    ███ 
        ███ ███    ███ ███    ███ ███    ███ 
        ███ ███    ███ ███    ███ ███    ███ 
        ███ ███    ███ ███    ███ ███    ███ 
        ███ ███    ███ ███    ███ ███    ███ 
        ███ ███    ███ ███   ▄███ ███    ███ 
    █▄ ▄███ ████████▀  ████████▀   ▀██████▀  
    ▀▀▀▀▀▀`));

const argv = yargs
    .version(false)
    .help(false)
    .usage('Judo')
    .argv;

require('../src')
    .run(argv)
    .then(() => console.log('DONE'))
    .catch(console.error);